<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @* 生产环境下加载bootstrap.css 非生产环境下加载site.css *@
    <environment include="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>

</head>
<body>
    
    <div class="container">
        @*<h3>_Layout - no admin</h3>*@
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" asp-controller="home" asp-action="index">
                <img src="~/images/10yuan.jpg" width="50" height="50" alt="Alternate Text" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibieNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="collapsibieNavbar" class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="home" asp-action="Index">学生列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="home" asp-action="Create">添加学生</a>
                    </li>
                </ul>
            </div>

        </nav>

        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
