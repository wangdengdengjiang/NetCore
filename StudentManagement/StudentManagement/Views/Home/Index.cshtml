@* 使用@model 指令指定模型类型 *@
@model IEnumerable<Student>
@{ 
    ViewBag.Title = "学生列表页面";
}

    <div class="card-deck"> 
        @foreach (var student in Model)
        { 
            <div class="card m-3">
                <div class="card-header">
                    <h3>@student.Name</h3>
                </div>
                @* tagHelper增强了img 标签，为静态图像文件提供了“缓存破坏行为” *@
                <img class="card-img-top" src="~/images/nini.jpg" asp-append-version="true"/>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@student.Id"  class="btn btn-primary m-1">查看</a>
                    @*<a href="/home/details/@student.Id" class="btn btn-primary">查看</a>*@
                    
                    <a href="#" class="btn btn-primary m-1">编辑</a>
                    <a href="#" class="btn btn-danger m-1">删除</a>
                </div>
            </div>
        }
    </div>


